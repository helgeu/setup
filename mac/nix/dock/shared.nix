# Shared Dock settings for all macOS machines
{
  system.defaults.dock = {
    # Appearance
    autohide = true;
    autohide-delay = 0.0;
    autohide-time-modifier = 0.4;
    tilesize = 48;
    magnification = false;
    orientation = "bottom";
    show-recents = true;
    showhidden = true;

    # Animation
    launchanim = true;
    mineffect = "scale";
    minimize-to-application = true;

    # Behavior
    mru-spaces = false;
    show-process-indicators = true;
  };
}
