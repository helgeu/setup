# AdoBoards TUI keymaps
[
  # Open AdoBoards in different layouts
  {
    mode = "n";
    key = "<leader>ab";
    action = "<cmd>AdoBoards<cr>";
    desc = "AdoBoards (horizontal split)";
  }
  {
    mode = "n";
    key = "<leader>aB";
    action = "<cmd>AdoBoardsFullscreen<cr>";
    desc = "AdoBoards (fullscreen)";
  }
  {
    mode = "n";
    key = "<leader>av";
    action = "<cmd>AdoBoardsV<cr>";
    desc = "AdoBoards (vertical split)";
  }
  {
    mode = "n";
    key = "<leader>at";
    action = "<cmd>AdoBoardsTab<cr>";
    desc = "AdoBoards (new tab)";
  }
]
